{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Svelte: Chrome",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: dev",
      "url": "http://localhost:10626",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "rollup:///src/*": "${webRoot}/*",
        "rollup:///./src/*": "${webRoot}/*",
        "rollup:///./*": "${webRoot}/*",
        "rollup:///*": "*",
        "rollup:///./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Attach to Node Functions API",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "preLaunchTask": "func: host start"
    }
  ],
  "compounds": [
    {
      "name": "Debug Functions and Svelte",
      "configurations": ["Attach to Node Functions API", "Svelte: Chrome"]
    }
  ]
}
